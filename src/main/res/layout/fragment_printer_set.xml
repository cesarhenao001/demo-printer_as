<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="module_android_demo.example.com.demo_printer.fragment.PrinterSetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/printSpeed"/>
            <Spinner
                android:entries="@array/arrayPrintSpeed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/spSpeed"
                android:layout_height="wrap_content"></Spinner>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/printGray"/>
            <Spinner
                android:id="@+id/spGray"
                android:entries="@array/arrayPrintGray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/printLeftMargin"/>
            <EditText
                android:inputType="number"
                android:maxLength="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="0"
                android:layout_height="wrap_content"
                android:id="@+id/LeftMargin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0-47)"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/printRightMargin"/>
            <EditText
                android:text="0"
                android:inputType="number"
                android:maxLength="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/RightMargin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0-47)"/>
        </LinearLayout>
        <TextView
            android:textColor="#339933"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/printLeftRightTip"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/printRowSpacing"/>
            <EditText
                android:inputType="number"
                android:maxLength="3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtRowSpacing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0-255)"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cbItalic"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/printItalic"/>
            <CheckBox
                android:id="@+id/cbFrame"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/printFrame"/>
            <CheckBox
                android:id="@+id/cbBold"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/printBold"/>
            <CheckBox
                android:id="@+id/cbdoubleWidth"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/printDoubleWidth"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cbDoubleHigh"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/printDoubleHight"/>
            <CheckBox
                android:id="@+id/cbWhite"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/printWhite"/>
            <CheckBox
                android:id="@+id/cbUnderline"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/printUnderline"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <Button
            android:text="@string/printSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btPrintSet"/>
    </LinearLayout>

</FrameLayout>
